{
  "name": "Quick Deploy",
  "version": "4.0.0",
  "description": "This is chrome extension for quick deploy",
  "manifest_version": 3,
  "author": "Amit Glam",
  "background": {
    "service_worker": "/scripts/background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Welcome to quick deploy",
    "default_icon": {
      "16" : "gitlab-logo.png",
      "32" : "gitlab-logo.png",
      "48" : "gitlab-logo.png",
      "128" : "gitlab-logo.png",
      "256" : "gitlab-logo.png",
      "1024" : "gitlab-logo.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/scripts/index.js"],
      "run_at": "document_end"
    }
  ]
}
